package jp.archaique.btn
{
	import jp.archaique.transition.ITransition;
	import jp.archaique.transition.ITransitionBase;
	
	public interface ITransitionBtn extends ISimpleBtn
	{
		function set showTransition(value:ITransition):void;
		function set hideTransition(value:ITransition):void;
		function set overTransition(value:ITransition):void;
		function set outTransition(value:ITransition):void;
	
		function get overTransitions():Array;
		function get outTransitions():Array;
		function get showTransitions():Array;
		function get hideTransitions():Array;
		
		function set showTransitions(value:Array):void;
		function set hideTransitions(value:Array):void;
		function set overTransitions(value:Array):void;
		function set outTransitions(value:Array):void;
		
	
		
		//transition_visible
		function get overTransitionsVisible():Boolean;
		function get outTransitionsVisible():Boolean;
		function get showTransitionVisible():Boolean;
		function get hideTransitionVisible():Boolean; 
		
		function set overTransitionsVisible(value:Boolean):void;
		function set outTransitionsVisible(value:Boolean):void;
		function set showTransitionVisible(value:Boolean):void;
		function set hideTransitionVisible(value:Boolean):void; 
		
		function set overAndOutTransition(value:ITransition):void;
		function set showAndHideTransition(value:ITransition):void;
		function set overAndOutTransitions(value:Array):void;
		function set showAndHideTransitions(value:Array):void;
		
		
	}
}