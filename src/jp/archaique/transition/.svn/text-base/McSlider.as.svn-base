package jp.archaique.transition{		import caurina.transitions.Tweener;		import flash.display.DisplayObject;	import flash.display.DisplayObjectContainer;	import flash.display.Sprite;		public class McSlider{				private var stg:DisplayObject;		private var num:Number;		private var show_type:String;		private var s:Number=0.5;		private var mask_mc:Sprite;		private var img:Sprite;		private var d:Number;				public function McSlider(stg:DisplayObject , num:Number , show_type:String="L" , s:Number=0.5, d:Number=0){			this.stg=stg;			this.num=num;			this.show_type=show_type;			this.s=s;			this.d=d;			img= stg["img"];						mask_mc = new Sprite();			mask_mc.graphics.beginFill(0x000000);			mask_mc.graphics.drawRect(0,0,stg.width,stg.height);			DisplayObjectContainer(stg).addChild(mask_mc);						img.mask=mask_mc;												var move_point:Number;			switch(this.show_type){				case "T":					move_point=img.height-num;					img.y=move_point;				break;				case "B":					move_point=(img.height-num)*-1;					img.y=move_point;				break;				case "R":					move_point=(img.width-num)*-1;					img.x=move_point;				break;				case "L":					move_point=img.width-num;					img.x=move_point;				break;			}					}				public function show(de:Object=null):void{			if(de!=null){				this.d=Number(de);			}			Tweener.addTween(img,{ x:0, y:0, time:s, transition:"liner",delay:d});		}				public function hide(de:Object=null):void{			if(de!=null){				this.d=Number(de);			}			var move_point:Number;			switch(show_type){				case "T":					move_point=img.height-num;					Tweener.addTween(img,{ y:move_point, time:s, transition:"liner",delay:d});				break;				case "B":					move_point=(img.height-num)*-1;					Tweener.addTween(img,{ y:move_point, time:s, transition:"liner",delay:d});				break;				case "R":					move_point=(img.width-num)*-1;					Tweener.addTween(img,{ x:move_point, time:s, transition:"liner",delay:d});				break;				case "L":					move_point=img.width-num;					Tweener.addTween(img,{ x:move_point, time:s, transition:"liner",delay:d});				break;			}		}								public function kill():void{			DisplayObjectContainer(stg).removeChild(mask_mc);			mask_mc=null;		}						//---------------------------------------------------------------		public function setShowType(show_type:String):void{			this.show_type=show_type;		}				public function setSpeed(s:Number):void{			this.s=s;		}				public function setDelay(d:Number):void{			this.d=d;		}			}}